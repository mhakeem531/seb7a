<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/salah_back"
    tools:context=".fragments.SalahFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/salah_button"
            android:layout_width="235dp"
            android:layout_height="228dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/circle_button_background_clicked"
            android:gravity="center"
            android:text="@string/salah"
            android:textAlignment="center"
            android:textColor="@color/whiteColor"
            android:textSize="50sp"
            app:layout_constraintBottom_toTopOf="@+id/counter_textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.39" />

        <TextView
            android:id="@+id/counter_textView"
            android:layout_width="341dp"
            android:layout_height="75dp"
            android:layout_marginBottom="64dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/circle_button_background_clicked"
            android:gravity="center"
            android:text="Ù "
            android:textColor="@color/whiteColor"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/salah_button"
            app:layout_constraintStart_toStartOf="@+id/salah_button" />


    </android.support.constraint.ConstraintLayout>

</FrameLayout>